<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Edicion_de_registro">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- Titulo 1 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edicion de registro"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:id="@+id/lblTituloEs"/>

        <EditText
            android:id="@+id/txtNombreEd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/lblTituloEs"
            android:hint="Nombre"/>

        <EditText
            android:id="@+id/txtContraseñaEd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/txtNombreEd"
            android:hint="Cedula"/>

        <Button
            android:id="@+id/Bt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtContraseñaEd"
            android:onClick="EntrarEd"
            android:layout_marginTop="20dp"
            android:text="Ingresar"
            />

    </RelativeLayout>

</LinearLayout>